# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/farmdirect"

# Session Secret (Required for authentication)
SESSION_SECRET="your-secure-session-secret-key-change-this-in-production"

# Stripe Configuration (Optional - will use mock if not provided)
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_PRICE_ID="price_your_stripe_price_id"

# SendGrid Configuration (Optional - will use mock if not provided)
SENDGRID_API_KEY="your_sendgrid_api_key"

# Sentry Configuration (Optional - will use mock if not provided)
SENTRY_DSN="your_sentry_dsn_url"

# Application Environment
NODE_ENV="development"

# Optional: Custom port (defaults to 5000)
PORT=5000

# Optional: Database connection pool settings
PGHOST="localhost"
PGPORT="5432"
PGDATABASE="farmdirect"
PGUSER="username"
PGPASSWORD="password"
